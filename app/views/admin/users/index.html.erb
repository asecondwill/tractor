<div class="row">
    <div class="col-8">
      <h6 class="header-pretitle">index</h6>
      <h1 class="header-title">Users</h1>
    </div>
    <div class="col-4 text-right">
      <a class="btn btn-primary" href="/admin/users/new">  Add User</a>
    </div>
  </div>
<div class="card">
  <div class="card-body">
    <div id="articles">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th class="actions"></th>
          </tr>
        </thead>

      <% @users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.created_at.to_s(:short_civillian) %></td>
            <td class="actions">
              <%= link_to "<i class='bi-pencil'></i>".html_safe, edit_admin_user_path(user) %>
                      <%= link_to "<i class='bi-trash'></i>".html_safe, admin_user_path(user), data: {
                                  turbo_method: :delete,
                                  turbo_confirm: "Are you sure?"
                                } %>
            </td>
          </tr>
      <% end %>
      </table>
    </div>


  </div>
</div>
