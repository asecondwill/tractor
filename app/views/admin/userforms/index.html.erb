<div class="row">
    <div class="col-8">
      <h6 class="header-pretitle">index</h6>
      <h1 class="header-title">UserForm</h1>
    </div>
    <div class="col-4 text-right">
      <a class="btn btn-primary" href="/admin/userforms/new">  Add UserForm</a>
    </div>
  </div>
<div class="card">
  <div class="card-body">
    <div id="articles">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Created</th>
            <th class="actions"></th>
          </tr>
        </thead>

      <% @userforms.each do |userform| %>
          <tr>

            <td><%= link_to  userform.name, admin_userform_path(userform) %></td>
            <td><%= userform.created_at.to_s(:short_civillian) %></td>
            <td class="actions">
              <%= link_to "<i class='bi-pencil'></i>".html_safe, edit_admin_userform_path(userform) %>
              <%= link_to "<i class='bi-trash'></i>".html_safe, admin_userform_path(userform), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
                        } %>
            </td>
          </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
